<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.twotr.twotr.studenttwotr.StudentHome">

    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomBar_student" />
    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottomBar_student"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        app:bb_tabXmlResource="@xml/guest_bottom_tabs"
        app:layout_anchor="@+id/contentContainer"
        app:layout_anchorGravity="bottom|center" />




</RelativeLayout>
