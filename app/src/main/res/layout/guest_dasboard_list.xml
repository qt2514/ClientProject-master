<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
     android:layout_margin="8dp"
        android:elevation="10dp"
        android:layout_height="wrap_content"
        tools:targetApi="lollipop">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="3dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"

                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/tutor_subject_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:src="@drawable/profile_image_tutor" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tutor_sub_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:fontFamily="@font/montserrat"
                        android:maxLines="1"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="15sp"
                        android:textStyle="bold" />


                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:progressBackgroundTint="@color/coloryellow"
                        android:progressTint="@color/coloryellow"
                        android:max="5"
                        android:rating="5"
                        android:scaleX=".5"
                        android:scaleY=".5"
                        android:layout_margin="3dp"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp"

                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/tutor_subject_price"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="end|bottom"
               android:layout_margin="1dp"
                    android:background="@drawable/tab_curve_logocolor"
                    android:fontFamily="@font/montserrat"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
            android:layout_margin="4dp"
                android:background="#dfe6e4e4"/>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="3dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tutor_subject_name"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat"
                    android:padding="2dp"
android:maxLines="1"
android:ems="18"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="13sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_access_time_black_24dp"
                        android:backgroundTint="@color/colorAccent" />

                    <TextView
                        android:id="@+id/tutor_subject_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:textSize="12sp"
                        android:layout_marginStart="3dp"

                        android:layout_gravity="center"
                       />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>



    </android.support.v7.widget.CardView>





</RelativeLayout>