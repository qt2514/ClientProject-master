<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/white_notifi"
    tools:context=".tutorfiles.NotificationDetails"
    >
<RelativeLayout
    android:id="@+id/relative_notifi_head"
    android:layout_width="match_parent"
    android:background="@drawable/black_notifi"
    android:layout_height="200dp">
    <ImageButton
        android:id="@+id/back_ima_scedule"
        android:layout_width="30dp"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:tint="@color/mdtp_white"
        android:layout_marginEnd="5dp"
        app:srcCompat="@drawable/ic_back_page"
        android:background="@null"
        android:focusable="true" />
    <TextView
        android:id="@+id/name_text_notifi"
        android:textSize="22sp"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/mdtp_white"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</RelativeLayout>



<LinearLayout
    android:layout_above="@+id/nuim"
    android:layout_below="@+id/relative_notifi_head"
    android:layout_width="match_parent"
  android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_height="match_parent">
<TextView
android:text="Subject"
    android:textSize="16sp"
    android:textColor="@color/black"
    android:layout_width="wrap_content"
    android:fontFamily="@font/montserrat"
    android:layout_height="wrap_content" />
<TextView

    android:textSize="18sp"

    android:textColor="@color/black"

    android:id="@+id/subject_name_notifi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <TextView
        android:text="Status"
        android:layout_marginTop="10dp"
        android:textSize="16sp"

        android:textColor="@color/black"

        android:layout_width="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_height="wrap_content" />
    <TextView

        android:textSize="18sp"

        android:textColor="@color/black"

        android:id="@+id/status_notifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="Schedule Timings"
       android:layout_marginTop="10dp"
        android:textSize="16sp"

        android:textColor="@color/black"

        android:layout_width="wrap_content"
        android:fontFamily="@font/montserrat"
        android:layout_height="wrap_content" />
    <TextView

        android:textSize="18sp"
        android:textColor="@color/black"
        android:id="@+id/schedule_notifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_below="@+id/relative_notifi_head"
        android:id="@+id/image_profileedit"
        android:layout_width="70dp"
        android:layout_height="70dp"
android:layout_alignParentEnd="true"
        android:layout_marginTop="-35dp"
        android:src="@drawable/profile_image_tutor" />

    <LinearLayout
        android:id="@+id/nuim"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="2"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/but_decli"
            android:layout_width="wrap_content"
            android:text="Decline"
            android:layout_weight="1"
            android:visibility="gone"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:background="@color/red_btn_bg_pressed_color"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/but_accep"
            android:layout_width="wrap_content"
            android:text="Accept"
            android:layout_weight="1"
            android:visibility="gone"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:background="@color/colorAccent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/but_confirm"
            android:layout_width="match_parent"
            android:text="Confirm/Pay"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat"
            android:textSize="16sp"
            android:visibility="gone"
            android:background="@color/colorAccent"
            android:layout_height="wrap_content" />
    </LinearLayout>



</RelativeLayout>