<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.twotr.twotr.guestfiles.GuestActivityDetails"
    tools:showIn="@layout/activity_guest_details">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/top_relat"
        android:gravity="top"
        android:background="@color/colorPrimaryDark"
        android:layout_height="80dp">
        <ImageButton
            android:id="@+id/back_ima_scedule"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="true"
            android:layout_alignParentStart="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="19dp"
            android:background="@drawable/ic_back_page"
            android:backgroundTint="#fff" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:weightSum="4"
            android:layout_marginTop="9dp"
            android:orientation="horizontal"
            android:layout_marginLeft="50dp"

            android:id="@+id/linearLayout5">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_profile"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/profile_image_tutor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="2">

                <TextView
                    android:id="@+id/prof_prof_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="7dp"
                    android:fontFamily="@font/montserrat"

                    android:textColor="@color/colorwhite"
                    android:textSize="16sp" />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">




                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleIndicator"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:clickable="false"
                        android:contextClickable="false"
                        android:layout_marginLeft="7dp"
                        android:progressBackgroundTint="@color/coloryellow"
                        android:layout_marginTop="3dp"
                        android:progressTint="@color/coloryellow"
                        android:max="5"
                        android:rating="5"
                        android:scaleX=".5"
                        android:scaleY=".5"
                        android:transformPivotX="0dp"
                        android:transformPivotY="0dp"

                        />

                    <!--<RatingBar-->
                    <!--android:id="@+id/servpdet_ratingbar"-->
                    <!--style="?android:attr/ratingBarStyleIndicator"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:clickable="false"-->
                    <!--android:focusable="false"-->
                    <!--android:numStars="5"-->
                    <!--android:progressBackgroundTint="@color/colorwhite"-->
                    <!--android:progressTint="@color/buttonColorPrimary"-->
                    <!--android:rating="3"-->
                    <!--android:scaleX=".4"-->
                    <!--android:scaleY=".4"-->
                    <!--android:secondaryProgressTint="@color/colorwhite"-->
                    <!--android:transformPivotX="150dp"-->
                    <!--android:transformPivotY="0dp" />-->
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="13dp"
            android:background="@drawable/guestdashboard"
            android:backgroundTint="@color/colorAccent"
            android:id="@+id/imageView2" />
    </RelativeLayout>
    <devs.mulham.horizontalcalendar.HorizontalCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_below="@+id/top_relat"
        android:layout_height="wrap_content"
        android:background="#fff"
        app:textColorSelected="@color/colorPrimary"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/relaymast"
        android:padding="10dp"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        >

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:elevation="10dp"

            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            >
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/linlay1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:visibility="gone"

                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:id="@+id/starttime1"
                            android:layout_width="wrap_content"

                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat"
                            android:textSize="14sp"
                            android:background="@drawable/border_less_main"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/endtime1"
                            android:layout_width="wrap_content"

                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:background="@drawable/border_less_main"

                            android:fontFamily="@font/montserrat"
                            android:textSize="14sp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linlay2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:id="@+id/starttime2"
                            android:layout_width="wrap_content"

                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat"
                            android:background="@drawable/border_less_main"

                            android:textSize="14sp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/endtime2"
                            android:layout_width="wrap_content"

                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat"
                            android:background="@drawable/border_less_main"

                            android:textSize="14sp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linlay3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:id="@+id/starttime3"
                            android:layout_width="wrap_content"

                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat"
                            android:background="@drawable/border_less_main"

                            android:textSize="14sp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/endtime3"
                            android:layout_width="wrap_content"

                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat"
                            android:background="@drawable/border_less_main"

                            android:textSize="14sp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linlay4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:id="@+id/starttime4"
                            android:layout_width="wrap_content"

                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat"
                            android:background="@drawable/border_less_main"

                            android:textSize="14sp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/endtime4"
                            android:layout_width="wrap_content"

                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat"
                            android:background="@drawable/border_less_main"

                            android:textSize="14sp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/linlay5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:weightSum="2">
                        <TextView
                            android:id="@+id/starttime5"
                            android:layout_width="wrap_content"

                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat"
                            android:background="@drawable/border_less_main"

                            android:textSize="14sp"
                            android:layout_height="wrap_content" />
                        <TextView
                            android:id="@+id/endtime5"
                            android:layout_width="wrap_content"

                            android:layout_margin="5dp"
                            android:padding="5dp"
                            android:fontFamily="@font/montserrat"
                            android:background="@drawable/border_less_main"

                            android:textSize="14sp"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                    <Button
                        android:layout_width="wrap_content"
                        android:id="@+id/map_show"
                        android:textAllCaps="false"
                        android:visibility="gone"
                        android:text="Show Map"
                        android:background="@drawable/signin_butt"
                        android:textColor="@color/mdtp_white"
                        android:layout_height="wrap_content" />
                </LinearLayout>

            </ScrollView>


        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
