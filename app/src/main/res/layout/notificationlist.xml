<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/main_card_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="8dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/notification_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="5dp"
                android:layout_centerVertical="true"
                android:src="@drawable/profile_image_tutor" />
<TextView
    android:id="@+id/notification_name"
    android:layout_toEndOf="@+id/notification_image"
    android:layout_width="match_parent"
    android:maxLines="1"
    android:ems="14"
    android:fontFamily="@font/montserrat"
    android:layout_height="wrap_content"
    android:textSize="14sp"
    android:layout_margin="2dp" />
            <TextView
                android:id="@+id/notification_subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ems="14"
                android:fontFamily="@font/montserrat"
                android:textSize="13sp"

                android:layout_below="@+id/notification_name"
                android:layout_alignStart="@+id/notification_name"
                android:layout_margin="2dp" />

            <TextView
                android:id="@+id/status_notification"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:ems="14"
                android:fontFamily="@font/montserrat"
                android:textSize="12sp"

                android:layout_height="wrap_content"
                android:layout_below="@+id/notification_subject"
                android:layout_alignStart="@+id/notification_name"
                android:layout_margin="2dp" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>