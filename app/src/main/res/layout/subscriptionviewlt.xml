<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
 android:layout_margin="5dp"
    card_view:cardElevation="1dp"
    card_view:cardCornerRadius="5dp"
    >


<RelativeLayout
    android:layout_width="match_parent"
    android:id="@+id/image_rale"
    android:background="#81000000"
    android:layout_height="200dp">



    <ImageView
        android:id="@+id/image_subs"

        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <TextView
        android:layout_width="wrap_content"
        android:textSize="14sp"

        android:textColor="@color/colorAccent"
        android:id="@+id/price_subs"
        android:background="@drawable/border_full"
        android:layout_marginTop="10dp"
        android:padding="5dp"

        android:fontFamily="@font/montserrat"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#88000000"
     android:layout_alignParentBottom="true"
        android:layout_height="60dp">


        <TextView
            android:id="@+id/title_subs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:layout_margin="2dp"
            android:fontFamily="@font/montserrat"
            android:textAlignment="center"
            android:textColor="@color/mdtp_white"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:id="@+id/vviw_ss"
            android:layout_below="@+id/title_subs"
           android:layout_centerHorizontal="true"
            android:background="#81ffffff"
            android:padding="2dp" />

        <TextView
            android:id="@+id/descrip_subs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/vviw_ss"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="2dp"

            android:fontFamily="@font/montserrat"

            android:textAlignment="center"
            android:textColor="@color/mdtp_white"
            android:textSize="12sp" />
    </RelativeLayout>
</RelativeLayout>



</android.support.v7.widget.CardView>
</LinearLayout>